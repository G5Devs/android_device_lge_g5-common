on property:vold.decrypt=trigger_restart_framework
    restart log-kernel
    restart log-power
    restart logcat-main
    restart logcat-system
    restart logcat-radio
    restart logcat-events
    restart log-packet
    restart log-xfrm
    restart logcat-memory

on property:vold.encrypt_progress=0
